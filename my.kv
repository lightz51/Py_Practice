<MyGridLayout>
    name:name
    pwd:password
    GridLayout:
        cols:1
        size:root.width, root.height

        GridLayout:
            cols:2

            Label:
                text:"Name: "

            TextInput:
                id:name
                multiline:False

            Label:
                text:"Password: "

            TextInput:
                id:password
                multiline:False

        Button:
            text:"Submit"
            font_size:20
            on_press:root.press()
